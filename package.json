{
  "name": "chocomint-toolkit",
  "version": "0.0.1",
  "description": "This is Chocomint toolkit repository",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chocomintapp/chocomint-toolkit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chocomintapp/chocomint-toolkit/issues"
  },
  "homepage": "https://github.com/chocomintapp/chocomint-toolkit#readme",
  "scripts": {
    "prepare": "husky install",
    "format:check": "prettier . --ignore-path .gitignore --write",
    "build": "lerna run build",
    "test": "lerna run test",
    "release": "yarn build && yarn lerna publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.1.2"
  }
}
